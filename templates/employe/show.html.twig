{% extends 'base.html.twig' %}

{% block title %}Détail d'un employé{% endblock %}

{% block body %}
    <h1>Détail d'un employé</h1>

    <h2>{{ employe }}</h2>
    <p>
        Entreprise : 
        <a href="{{ path('show_entreprise', {'id':employe.entreprise.id}) }}">
            {{ employe.entreprise.raisonSociale }}
        </a><br>
        Ville : {% if employe.ville %} {{ employe.ville }} {% else %} Non renseignée. {% endif %}<br>

        Âge : 
        {% if employe.age %}
            {{ employe.age }} ans <br>
        {% else %}
            Inconnu <br>
        {% endif %}

        Date de naissance :
        {% if employe.dateNaissance %}
            {{ employe.dateNaissance | date("d/m/Y") }}<br>            
        {% else %}
           Non renseigné <br> 
        {% endif %}
        
        Date d'embauche : {{ employe.dateEmbauche | date("d/m/Y") }}<br>
    </p>


{% endblock %}
